<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pabloazana.presentation.views.customviews.DetailsViewFlipper
        android:id="@+id/details_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/LinearTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height"
            android:src="@drawable/edreams_logo_main"
            android:layout_marginTop="@dimen/details_elements_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/details_elements_margin">

            <ImageView
                android:id="@+id/icon_video_imageView"
                android:state_focused="true"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_video_active"
                android:nextFocusDown="@+id/icon_picture_imageView"
                android:layout_marginBottom="@dimen/details_elements_margin"/>

            <ImageView
                android:id="@+id/icon_picture_imageView"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_pictures_inactive"
                android:nextFocusUp="@+id/icon_video_imageView"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
